<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.AllExpensesPage">

    <CollectionView x:Name="expensesCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <!-- Customize your item template to display expenses -->
                    <Label Text="{Binding Description}" />
                    <Label Text="{Binding Amount, StringFormat='{0:C}'}" />
                    <Label Text="{Binding Date, StringFormat='{0:MM/dd/yyyy}'}" />
                    <!-- Add more details as needed -->
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
