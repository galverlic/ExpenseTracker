<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracker.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseTracker.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Expenses Pie Chart"
        ContentTemplate="{DataTemplate local:ExpensesPieChartPage}"
        Route="ExpensesPieChart" />

    <ShellContent
        Title="All Expenses"
        ContentTemplate="{DataTemplate local:AllExpensesPage}"
        Route="AllExpensesPage" />
</Shell>
