<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="ExpenseTracker.Pages.EditExpensePopup"
               Size="400, 600">
    <!-- Adjust size as needed -->

    <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="FillAndExpand" BackgroundColor="#E8EAF6">

        <Label Text="Edit Expense"
               FontSize="34"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#5E35B1"
               Margin="0,0,0,10" />

        <Entry x:Name="DescriptionEntry" Placeholder="Description"/>

        <Frame CornerRadius="10" Padding="0" HasShadow="True" BackgroundColor="#FFFFFF" Margin="0,10">
            <Picker x:Name="CategoryPicker"
                    Title="Category"
                    BackgroundColor="#FFFFFF"
                    TextColor="#212121"
                    ItemDisplayBinding="{Binding Name}"
                    FontSize="Medium" />
        </Frame>

        <Entry x:Name="AmountEntry" Placeholder="Amount" Keyboard="Numeric"/>
        <DatePicker x:Name="DateEntry" />
        <Button Text="Save" Clicked="OnSaveClicked"/>
    </VerticalStackLayout>
</toolkit:Popup>
